<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/divide"
        android:layout_width="@dimen/circle_button"
        android:layout_height="@dimen/circle_button"
        android:layout_marginLeft="@dimen/button_left_margin"
        android:layout_marginTop="@dimen/button_top_margin"
        android:backgroundTint="@color/md_theme_light_primary"
        android:text="/"
        android:textColor="@color/md_theme_light_onPrimary"
        android:onClick="defineOperator"
        app:layout_constraintStart_toEndOf="@+id/multiply"
        app:layout_constraintTop_toBottomOf="@+id/subtract" />

    <Button
        android:id="@+id/multiply"
        android:layout_width="@dimen/circle_button"
        android:layout_height="@dimen/circle_button"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="@dimen/button_top_margin"
        android:backgroundTint="@color/md_theme_light_primary"
        android:text="*"
        android:textColor="@color/md_theme_light_onPrimary"
        android:onClick="defineOperator"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add" />

    <Button
        android:id="@+id/subtract"
        android:layout_width="@dimen/circle_button"
        android:layout_height="@dimen/circle_button"
        android:layout_marginLeft="@dimen/button_left_margin"
        android:layout_marginTop="@dimen/button_top_margin"
        android:backgroundTint="@color/md_theme_light_primary"
        android:text="-"
        android:textColor="@color/md_theme_light_onPrimary"
        android:onClick="defineOperator"
        app:layout_constraintStart_toEndOf="@+id/add"
        app:layout_constraintTop_toBottomOf="@+id/value1" />

    <Button
        android:id="@+id/add"
        android:layout_width="@dimen/circle_button"
        android:layout_height="@dimen/circle_button"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="@dimen/button_top_margin"
        android:backgroundTint="@color/md_theme_light_primary"
        android:text="+"
        android:textColor="@color/md_theme_light_onPrimary"
        android:onClick="defineOperator"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/value1" />

    <Button
        android:id="@+id/enter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="160dp"
        android:layout_marginTop="@dimen/button_top_margin"
        android:text="enter"
        android:textColor="@color/md_theme_light_onPrimary"
        android:onClick="calculate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/value2" />

    <EditText
        android:id="@+id/value1"
        style="@style/valueInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/value2"
        style="@style/valueInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divide" />


    <TextView
        android:id="@+id/output"
        android:gravity="center"
        android:hint="result"
        android:textColor="@color/md_theme_light_primary"
        android:textColorHint="@color/md_theme_light_inversePrimary"
        android:textSize="24sp"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enter"
        android:layout_marginStart="80dp"
        android:layout_marginTop="@dimen/button_top_margin" />


</androidx.constraintlayout.widget.ConstraintLayout>